<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class="actions">
	<%= link_to 'Edit User', edit_user_path(@user) %> |
	<%= link_to 'Back to Users', users_path %> |
</div>

<h1>
  <% if @user.admin %>
    Admin user
  <% elsif @user.student %>
    <%= @user.student.class %>
  <% elsif @user.teacher %>
    <%= @user.teacher.class %>
  <% else %>
    User
  <% end %>
  <% if @user.id == session[:user] %>
    - My profile
  <% end %>
</h1>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>
 
<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<% if @subjects.length > 0 %>
<p>
  <b>Subjects:</b> <%= @subjects.join(', ') %>
</p>
<% end %>